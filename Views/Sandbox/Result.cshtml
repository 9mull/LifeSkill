@{
    ViewData["Title"] = "Результат песочницы";
    int correct = ViewBag.Correct ?? 0;
    int total = ViewBag.Total ?? 0;
}
<div class="container mx-auto max-w-xl px-4 py-12 text-center">
    <div class="bg-white rounded-lg shadow-lg p-8">
        <svg class="w-12 h-12 text-emerald-500 mx-auto mb-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
        </svg>
        <h1 class="text-xl font-bold mb-3">Поздравляем!</h1>
        <div class="mb-4 p-4 bg-emerald-50 border border-emerald-200 rounded-lg text-lg font-semibold text-emerald-800">
            Вы правильно ответили на <span class="font-bold">@correct</span> из <span class="font-bold">@total</span> вопросов.
        </div>
        <div class="mb-6 p-3 bg-yellow-50 border border-yellow-200 rounded-lg text-yellow-800 text-base">
            Песочницу можно проходить каждый час<br />
            Возвращайтесь через час, чтобы проверить свои знания снова!
        </div>
        <a href="@Url.Action("Index", "Sandbox")" class="inline-flex items-center px-5 py-2.5 bg-emerald-600 text-white font-bold rounded-lg hover:bg-emerald-700 transition text-base">
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
            </svg>
            Вернуться в песочницу
        </a>
    </div>
</div> 