<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - LifeSkill</title>
    <link rel="icon" type="image/png" href="~/favicon.png">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/LifeSkill.Web.styles.css" asp-append-version="true" />
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        html::-webkit-scrollbar, body::-webkit-scrollbar, *::-webkit-scrollbar {
            display: none;
        }
        html, body, * {
            -ms-overflow-style: none;  
            scrollbar-width: none;     
        }
    </style>
</head>
<body>
    @{
        string GetNavLinkClasses(string controller)
        {
            var currentController = ViewContext.RouteData.Values["controller"] as string;
            return currentController == controller
                ? "border-emerald-500 text-gray-900 inline-flex items-center px-1 pt-1 border-b-2 text-sm font-medium"
                : "border-transparent text-gray-500 hover:border-gray-300 hover:text-gray-700 inline-flex items-center px-1 pt-1 border-b-2 text-sm font-medium";
        }
    }
    <header>
        <nav class="bg-white border-b border-gray-200">
            <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
                <div class="flex h-16 justify-between">
                    <div class="flex">
                        <div class="flex flex-shrink-0 items-center">
                            <a asp-controller="Home" asp-action="Index" class="text-xl font-bold text-emerald-600">LifeSkill</a>
                        </div>
                        <div class="hidden sm:ml-6 sm:flex sm:space-x-8">
                            <a asp-controller="Home" asp-action="Index" class="@(ViewContext.RouteData.Values["Controller"]?.ToString() == "Home" ? "inline-flex items-center border-b-2 border-emerald-500 px-1 pt-1 text-sm font-medium text-emerald-600" : "inline-flex items-center border-b-2 border-transparent px-1 pt-1 text-sm font-medium text-gray-500 hover:border-gray-300 hover:text-gray-700")">Главная</a>
                            <a asp-controller="Courses" asp-action="Index" class="@(ViewContext.RouteData.Values["Controller"]?.ToString() == "Courses" ? "inline-flex items-center border-b-2 border-emerald-500 px-1 pt-1 text-sm font-medium text-emerald-600" : "inline-flex items-center border-b-2 border-transparent px-1 pt-1 text-sm font-medium text-gray-500 hover:border-gray-300 hover:text-gray-700")">Курсы</a>
                            <a asp-controller="Tests" asp-action="Index" class="@(ViewContext.RouteData.Values["Controller"]?.ToString() == "Tests" ? "inline-flex items-center border-b-2 border-emerald-500 px-1 pt-1 text-sm font-medium text-emerald-600" : "inline-flex items-center border-b-2 border-transparent px-1 pt-1 text-sm font-medium text-gray-500 hover:border-gray-300 hover:text-gray-700")">Тесты</a>
                            <a asp-controller="Sandbox" asp-action="Index" class="@(ViewContext.RouteData.Values["Controller"]?.ToString() == "Sandbox" ? "inline-flex items-center border-b-2 border-emerald-500 px-1 pt-1 text-sm font-medium text-emerald-600" : "inline-flex items-center border-b-2 border-transparent px-1 pt-1 text-sm font-medium text-gray-500 hover:border-gray-300 hover:text-gray-700")">Песочница</a>
                            <a asp-controller="Exam" asp-action="Index" class="@(ViewContext.RouteData.Values["Controller"]?.ToString() == "Exam" ? "inline-flex items-center border-b-2 border-emerald-500 px-1 pt-1 text-sm font-medium text-emerald-600" : "inline-flex items-center border-b-2 border-transparent px-1 pt-1 text-sm font-medium text-gray-500 hover:border-gray-300 hover:text-gray-700")">Экзамен</a>
                        </div>
                    </div>
                    <div class="hidden sm:ml-6 sm:flex sm:items-center">
                        <partial name="_LoginPartial" />
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <main role="main">
            @RenderBody()
        </main>

    <footer class="bg-white">
        <div class="max-w-7xl mx-auto py-12 px-4 sm:px-6 md:flex md:items-center md:justify-between lg:px-8">
            <div class="mt-8 md:mt-0">
                <p class="text-center text-base text-gray-400">
                    &copy; @DateTime.Now.Year - LifeSkill Safety Training - <a href="#" class="text-gray-400 hover:text-gray-500">Политика конфиденциальности</a>
                </p>
    </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.j7s"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
