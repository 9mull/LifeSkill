@model LifeSkill.Web.Models.Course

@{
    ViewData["Title"] = Model.Title;
}

<div class="container mx-auto max-w-7xl px-4 py-8">
    <div class="mb-8">
        <a href="@Url.Action("Index")" class="inline-flex items-center text-emerald-600 hover:text-emerald-700">
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
            </svg>
            Назад к курсам
        </a>
    </div>

    <div class="bg-white rounded-lg shadow-lg overflow-hidden">
        <div class="p-8">
            <h1 class="text-3xl font-bold mb-4">@Model.Title</h1>
            
            @if (!string.IsNullOrEmpty(Model.Description))
            {
                <p class="text-gray-600 leading-relaxed mb-4">@Model.Description</p>
            }
            
            <div class="space-y-6">
                <h2 class="text-2xl font-semibold">Содержание курса</h2>
                
                <div class="space-y-4">
                    @foreach (var lesson in Model.Lessons)
                    {
                        <div class="flex items-center p-4 bg-gray-50 rounded-lg hover:bg-gray-100 transition-colors duration-300">
                            <div class="flex-1">
                                <h3 class="text-lg font-medium">@lesson.Title</h3>
                            </div>
                            <a href="@Url.Action("Details", "Lessons", new { id = lesson.Id })" class="ml-4 px-4 py-2 bg-emerald-600 text-white rounded hover:bg-emerald-700 transition-colors duration-300 inline-flex items-center">
                                Начать урок
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div> 