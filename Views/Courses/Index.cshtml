@model IEnumerable<LifeSkill.Web.Models.Course>

@{
    ViewData["Title"] = "Курсы";
}

<div class="container mx-auto max-w-7xl px-4 py-8">
    <h1 class="text-3xl font-bold mb-8">Курсы по безопасности жизнедеятельности</h1>
    
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        @foreach (var course in Model)
        {
            <div class="bg-white rounded-lg shadow-lg overflow-hidden hover:shadow-xl transition-shadow duration-300 flex flex-col h-full">
                @if (!string.IsNullOrEmpty(course.ImageUrl))
                {
                    <img src="@course.ImageUrl" alt="@course.Title" class="w-full h-48 object-cover">
                }
                else
                {
                    <div class="w-full h-48 bg-gray-200 flex items-center justify-center">
                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-16 h-16 text-gray-400">
                          <path stroke-linecap="round" stroke-linejoin="round" d="m2.25 15.75 5.159-5.159a2.25 2.25 0 0 1 3.182 0l5.159 5.159m-1.5-1.5 1.409-1.409a2.25 2.25 0 0 1 3.182 0l2.909 2.909m-18 3.75h16.5a1.5 1.5 0 0 0 1.5-1.5V6a1.5 1.5 0 0 0-1.5-1.5H3.75A1.5 1.5 0 0 0 2.25 6v12a1.5 1.5 0 0 0 1.5 1.5Zm10.5-11.25h.008v.008h-.008V8.25Zm.375 0a.375.375 0 1 1-.75 0 .375.375 0 0 1 .75 0Z" />
                        </svg>
                    </div>
                }
                
                <div class="p-6 flex flex-col flex-grow">
                    <h2 class="text-xl font-semibold mb-2 line-clamp-2 min-h-[3.5rem]">@course.Title</h2>
                    <div class="mt-auto pt-2 flex justify-between items-center">
                        <span class="text-sm text-gray-500">@course.Lessons.Count уроков</span>
                        <a href="@Url.Action("Details", new { id = course.Id })" 
                           class="inline-flex items-center px-4 py-2 bg-emerald-600 text-white rounded hover:bg-emerald-700 transition-colors duration-300 whitespace-nowrap">
                            Начать обучение
                            <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                            </svg>
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
</div> 