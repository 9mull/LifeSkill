@model RegisterViewModel

@{
    ViewData["Title"] = "Регистрация";
}

<div class="min-h-screen bg-gray-100 flex flex-col justify-center py-12 sm:px-6 lg:px-8">
    <div class="sm:mx-auto sm:w-full sm:max-w-md">
        <h2 class="mt-6 text-center text-3xl font-extrabold text-gray-900">
            Регистрация нового аккаунта
        </h2>
        <p class="mt-2 text-center text-sm text-gray-600">
            Уже есть аккаунт?
            <a href="@Url.Action("Login", "Account")" class="font-medium text-emerald-600 hover:text-emerald-500">
                Войдите
            </a>
        </p>
    </div>

    <div class="mt-8 sm:mx-auto sm:w-full sm:max-w-md">
        <div class="bg-white py-8 px-4 shadow sm:rounded-lg sm:px-10">
            <form asp-controller="Account" asp-action="Register" method="post" class="space-y-6">
                <div asp-validation-summary="All" class="text-red-500 text-sm"></div>

                <div>
                    <label asp-for="FirstName" class="block text-sm font-medium text-gray-700">
                        Имя
                    </label>
                    <div class="mt-1">
                        <input asp-for="FirstName" type="text" required
                               class="appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-emerald-500 focus:border-emerald-500 sm:text-sm">
                        <span asp-validation-for="FirstName" class="text-red-500 text-sm"></span>
                    </div>
                </div>

                <div>
                    <label asp-for="LastName" class="block text-sm font-medium text-gray-700">
                        Фамилия
                    </label>
                    <div class="mt-1">
                        <input asp-for="LastName" type="text" required
                               class="appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-emerald-500 focus:border-emerald-500 sm:text-sm">
                        <span asp-validation-for="LastName" class="text-red-500 text-sm"></span>
                    </div>
                </div>

                <div>
                    <label asp-for="Email" class="block text-sm font-medium text-gray-700">
                        Email
                    </label>
                    <div class="mt-1">
                        <input asp-for="Email" type="email" required
                               class="appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-emerald-500 focus:border-emerald-500 sm:text-sm">
                        <span asp-validation-for="Email" class="text-red-500 text-sm"></span>
                    </div>
                </div>

                <div>
                    <label asp-for="Password" class="block text-sm font-medium text-gray-700">
                        Пароль
                    </label>
                    <div class="mt-1">
                        <input asp-for="Password" type="password" required
                               class="appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-emerald-500 focus:border-emerald-500 sm:text-sm">
                        <span asp-validation-for="Password" class="text-red-500 text-sm"></span>
                    </div>
                </div>

                <div>
                    <label asp-for="ConfirmPassword" class="block text-sm font-medium text-gray-700">
                        Подтверждение пароля
                    </label>
                    <div class="mt-1">
                        <input asp-for="ConfirmPassword" type="password" required
                               class="appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-emerald-500 focus:border-emerald-500 sm:text-sm">
                        <span asp-validation-for="ConfirmPassword" class="text-red-500 text-sm"></span>
                    </div>
                </div>

                <div>
                    <button type="submit"
                            class="w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-emerald-600 hover:bg-emerald-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-emerald-500">
                        Зарегистрироваться
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
} 